<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/post"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/imagePost"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/username"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="150dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:gravity="start"/>


        <TextView
            android:id="@+id/caption"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:gravity="start"/>



    </LinearLayout>


    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/like_dislike"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp">

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_thumb_up_24"
            style="?android:attr/borderlessButtonStyle"/>

<!--        <TextView-->
<!--            android:id="@+id/likeButton"-->
<!--            android:text="Like"-->
<!--            android:layout_marginBottom="15dp"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:textSize="15sp"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_marginEnd="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="start"/>-->


        <TextView
            android:id="@+id/likesTextView"
            android:text=" Likes"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"/>

<!--        <Button-->
<!--            android:id="@+id/dislikeButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:drawableTop="@drawable/baseline_thumb_up_24"/>-->

        <ImageButton
            android:id="@+id/dislikeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_thumb_down_24"
            style="?android:attr/borderlessButtonStyle"/>

<!--        <TextView-->
<!--            android:id="@+id/dislikeButton"-->
<!--            android:drawableLeft="@drawable/baseline_thumb_up_24"-->
<!--            android:layout_marginBottom="15dp"-->
<!--            android:textSize="15sp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="0dp"-->
<!--            android:layout_marginEnd="20dp"/>-->

        <TextView
            android:id="@+id/dislikesTextView"
            android:text=" Dislikes"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/like_dislike"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/commentForm"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp">

            <EditText
                android:id="@+id/commentInput"
                android:hint="Comment"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/submitCommentButton"
                android:enabled="false"
                android:text="Submit"
                android:layout_marginBottom="15dp"
                android:textSize="12sp"
                android:layout_width="75dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/commentForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/commentRecyclerWrapper"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/commentSection"
            android:text="Comments"
            android:layout_marginBottom="0dp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:gravity="start"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:id="@+id/commentsRecycler"
            android:nestedScrollingEnabled="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>