<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- tools:context=".fragment.FeedFragment" -->


    <RadioGroup
        android:id="@+id/sortMethodRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/mostLikedRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Liked"/>
        <RadioButton
            android:id="@+id/mostDislikedRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Disliked"/>

    </RadioGroup>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="50dp"
        android:id="@+id/accountCollectionsRecycler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</FrameLayout>